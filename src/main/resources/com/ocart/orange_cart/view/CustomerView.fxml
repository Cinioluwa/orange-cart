                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="cartLabel" text="Cart (0)">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <!-- THIS BUTTON IS NEW -->
                        <Button fx:id="viewCartButton" mnemonicParsing="false" onAction="#handleViewCart" style="-fx-background-color: #ff6600; -fx-text-fill: white;" text="View Cart">
                            <HBox.margin>
                                <Insets left="10.0" />
