<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- This FXML defines a single product card. It's a reusable component. -->
<!-- It's a VBox to stack the image, name, price, and button vertically. -->
<VBox alignment="CENTER" maxHeight="320.0" maxWidth="220.0" minHeight="320.0" minWidth="220.0" prefHeight="320.0" prefWidth="220.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ocart.orange_cart.controller.ProductCardController">
    <children>
        <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="productNameLabel" text="Product Name" wrapText="true">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label fx:id="productPriceLabel" text="â‚¦0.00">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Button fx:id="addToCartButton" mnemonicParsing="false" onAction="#handleAddToCart" style="-fx-background-color: #004E8A; -fx-text-fill: white; -fx-font-weight: bold;" text="Add to Cart">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </Button>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>